<header class="site-header">
  <div class="container header-inner">
    <div class="brand">
      <img src="/assets/images/BitCurrent-latest.png" alt="BitCurrents logo" class="brand-logo" />
      <span class="brand-name">BitCurrents</span>
    </div>

    <nav class="nav" aria-label="Primary">
      <a href="/"
         {% if page.url == "/" %}aria-current="page"{% endif %}>Home</a>

      <a href="/under-construction/"
         {% if page.url and ((page.url | slice(0,7)) == "/about/") %}aria-current="page"{% endif %}>About</a>

      <a href="/under-construction/"
         {% if page.url and (((page.url | slice(0,9)) == "/projects") or ((page.url | slice(0,10)) == "/projects/")) %}aria-current="page"{% endif %}>Projects</a>

      <a href="/under-construction/"
         {% if page.url and (((page.url | slice(0,8)) == "/contact") or ((page.url | slice(0,9)) == "/contact/")) %}aria-current="page"{% endif %}>Contact</a>
    </nav>

    <!-- Must match selectors used in theme.js -->
    <button
      id="theme-toggle"
      class="btn btn--ghost"
      aria-label="Toggle color theme"
      data-theme-toggle
    >
      <span data-theme-label>Dark mode</span>
    </button>

    {# Load AFTER markup; defer is OK on the main script #}
    <script src="/assets/js/theme.js?v={{ build.version }}" defer nonce="{{ cspNonce }}"></script>
  </div>
</header>